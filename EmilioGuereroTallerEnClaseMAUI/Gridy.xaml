<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmilioGuereroTallerEnClaseMAUI.Gridy"
             Title="Gridy">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"  />
            <RowDefinition Height="50"  />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <BoxView Color="Aqua"/>
        <BoxView Grid.Row="1"
             Color="Beige"/>
        <BoxView Grid.Column="1"
             Color="Chartreuse"/>
        <BoxView Grid.Row="1"
             Grid.Column="1"
             Color="HotPink"/>
        <Button
        x:Name="Boton2"
        Text="Ir a Grid"
        Clicked="Boton2_Clicked"/>
    </Grid>
</ContentPage>