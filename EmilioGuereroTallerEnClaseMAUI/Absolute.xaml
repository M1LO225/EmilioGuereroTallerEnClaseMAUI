<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmilioGuereroTallerEnClaseMAUI.Absolute"
             Title="Absolute">
    <ScrollView>
        <AbsoluteLayout>
            <BoxView Color="Red"
             AbsoluteLayout.LayoutBounds="0, 0, 50, 50"
             AbsoluteLayout.LayoutFlags="None"/>

            <BoxView Color="Blue"
             AbsoluteLayout.LayoutBounds="1, 0, 50, 50"
             AbsoluteLayout.LayoutFlags="PositionProportional"/>

            <BoxView Color="Green"
             AbsoluteLayout.LayoutBounds="0, 1, 50, 50"
             AbsoluteLayout.LayoutFlags="PositionProportional"/>

            <Button 
                x:Name="Boton6"
                Text="Grid"
             Clicked="Boton6_Clicked"
             AbsoluteLayout.LayoutBounds="1, 1, 100, 50"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
        </AbsoluteLayout>
    </ScrollView>
    
</ContentPage>